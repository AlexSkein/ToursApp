<Page x:Class="ToursApp.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ToursApp.controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>       
        <StackPanel  Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Width="auto">
            <local:HexaButton Margin="20" Caption="Список туров" Description="Нажмите, чтобы открыть список туров" ColoredSource="/Resources/tours.jpg" ButtonBase.Click="HexaButton_Click2"/>
            <local:HexaButton Margin="20" Caption="Список отелей" Description="Нажмите, чтобы открыть список отелей" ColoredSource="/Resources/2922.jpg" ButtonBase.Click="HexaButton1_Click"/>
        </StackPanel>
    </Grid>
</Page>
